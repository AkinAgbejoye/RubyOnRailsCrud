<h1>Friends List</h1>

<div id="friends">
	<table class="table table-borderless table-striped">
    <thead class="table-dark">
      <tr>
        <td>Name:</td>
        <td>Email:</td>
        <td>Phonenumber:</td>
        <td>Twitter:</td>
      </tr>
    </thead>
    <tbody>
  <% @friends.each do |friend| %>
  <% if friend.user == current_user %>
    <%= render friend %>
   
      
   <% end %> 
  <% end %>
  </tbody>
</table>
</div>




<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>